<div class="container">
    <p id="notice"><%= notice %></p>
    <%= flash_messages %>
    <h1 class="text-center"><%= @company.name %></h1>
    <table class="table table-bordered">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col" colspan=3 class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @departments.each do |department| %>
            <tr>
                <td><%= department.id %></td>
                <td><%= department.name %></td>
                <!--below rails decorator is used -->
                <td align="center" ><%= department.show_link %></td>
                <td align="center" ><%= department.edit_link %></td>
                <td align="center" ><%= department.delete_link %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div>
    <%= link_to 'Back to companies' , superadmin_companies_path %>
    </div>
</div>