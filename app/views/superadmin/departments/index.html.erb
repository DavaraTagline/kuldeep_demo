<div class="container">
    <p id="notice"><%= notice %></p>
    <%= flash_messages %>
    <h1 class="text-center"><%= @company.name %></h1>
    <table class="table table-bordered">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col" colspan=3 class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @departments.each do |department| %>
            <tr>
                <td><%= department.id %></td>
                <td><%= department.name %></td>
                <td align="center" ><%= link_to 'Show',superadmin_company_department_path(id: department), class:'btn btn-outline-primary btn-sm' %></td>
                <td align="center" ><%= link_to 'Edit',edit_superadmin_company_department_path(id: department), class:'btn btn-outline-secondary btn-sm' %></td>
                <td align="center" ><%= link_to 'Delete',superadmin_company_department_path(id: department), method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-outline-danger btn-sm' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div>
    <%= link_to 'Back to companies' , superadmin_companies_path %>
    </div>
</div>