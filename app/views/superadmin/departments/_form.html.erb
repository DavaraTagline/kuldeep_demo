 <%= form_for([:superadmin,:company,@department]) do |f| %>

    <%= f.hidden_field :company_id, value: params[:company_id] %>

    <div class="form-group row">
      <%= f.label :name, class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
    </div>

    <div class="actions">
      <%= f.submit @department.new_record? ? "Add" : "Update" ,class:"btn btn-primary btn-sm" %><br />
    </div>
<% end %>