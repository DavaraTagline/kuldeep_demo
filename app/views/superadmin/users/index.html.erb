<div class="container">
  <h1 class="text-center mt-2">User details</h1>
  <input type="text" class="text-input" id="filter" value="" placeholder="Search"/>
  <%= link_to "Download CSV", superadmin_users_path(format: :csv), class: "btn btn-outline-success btn-sm float-right" %>
  <div class="table-responsive">
  <table class="table table-bordered mt-2">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Gender</th>
        <th scope="col">Company</th>
        <th scope="col">State</th>
        <th scope="col">City</th>
        <th scope="col">Discarded</th>
        <th scope="col" colspan=3, class="text-center" >Action</th>
      </tr>
      </tr>
    </thead>
    <tbody class="user_content">
      <%= render "index" %>
    </tbody>
  </table>
  </div>
  <h3 class="mt-3">Upload CSV</h3>
  <%= form_tag import_superadmin_users_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import", class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>

<script>
  $("#filter").keyup(function() {
      $.ajax({
        url: '/superadmin/users.js',
        data: {search: $(this).val()}
      });
  });
</script>