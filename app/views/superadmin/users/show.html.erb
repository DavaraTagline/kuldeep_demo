<div class="container">
    <h1><%= @user.name %>'s Information</h1>
    <p><b>Name:</b><%= @user.name %></p>
    <p><b>Email:</b><%= @user.email%></p>
    <p><b>Phone:</b><%= @user.phone%></p>
    <p><b>Gender:</b><%= @user.gender%></p>
    <p><b>State:</b><%= @user.state_name%></p>
    <p><b>City:</b><%= @user.city_name%></p>
    <!--below rails decorator is used -->
    <p><b>Created_at:</b><%= user.formatted_created_at%></p>
    <p><b>Accountdetails:</b>
        <div class="row m-2">
            <% @accountdetails.each do |account_detail| %>
                <div class="card mt-2 ml-2" style="width: 18rem;">
                    <div class="card-body">
                        <p class="card-text"><b>Acc_Name:</b><%= account_detail.account_name %></p>
                        <p class="card-text"><b>Acc_Number:</b><%= account_detail.account_number %></p>
                        <p class="card-text"><b>Branch_Name:</b><%= account_detail.branch_name %></p>
                    </div>
                </div>
            <% end %>
        </div>
    </p>

    <%= link_to 'Back', superadmin_users_path%>
</div> 