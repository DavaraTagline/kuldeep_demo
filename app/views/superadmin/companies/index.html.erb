<div class="container">
<p id="notice"><%= notice %></p>
<%= flash_messages %>
<h1 class="text-center">Companies</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Website</th>
      <th scope="col" colspan=3>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.email %></td>
        <td><%= c.website %></td>
        <td><%= link_to 'Show',superadmin_company_path(c) %></td>
        <td><%= link_to 'Edit',edit_superadmin_company_path(c) %></td>
        <td><%= link_to 'Destroy',superadmin_company_path(c), method: :delete, data: { confirm: 'Are you sure?'} %></td>
        <td><%= link_to 'Add department',new_superadmin_company_department_path(c) %></td>
        <td><%= link_to 'Show department',superadmin_company_departments_path(c) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<%= link_to 'Back to users' , superadmin_users_path %>
</div>
</div>